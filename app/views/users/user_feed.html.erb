<% provide(:title, @title)%>
<div class="container-fluid mt-5">
  <h1><%=@title%></h1>
  <div class="search_form">
    <%= form_with(url: @path, method: :get, local: true) do |f| %>
      <%= f.text_field :search%>
      <%= f.submit "検索", class: "btn btn-primary"%>
    <% end %>
  </div>
  <div class="feeds">
    <% if @users.present? %>
      <%= render @users %>
    <% else %>
      <div class="alert alert-danger" role="alert">該当するユーザが見つかりません</div>
    <% end %>
  </div>
  <%= paginate @users %>
</div>
