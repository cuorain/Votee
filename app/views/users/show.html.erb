<% provide(:title, @user.name)%>
<div class="user-info text-center">
  <div class="user-image">
    <% if @user.image? %>
      <%= image_tag @user.image.url, id: :image_preview %>
    <% else %>
      <%= image_tag '/user_images/default.jpg', id: :image_preview %>
    <% end %>
  </div>
  <div class="user-status">
  <h1><%= @user.name %></h1>
  </div>
</div>
