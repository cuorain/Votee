<% provide(:title, "アンケート検索")%>
<div class="container mt-5">
  <h1>アンケート検索</h1>
  <div class="search_form">
    <%= form_with(url: surveys_path, method: :get, local: true) do |f| %>
      <%= f.text_field :search%>
      <%= f.submit "検索", class: "btn btn-primary"%>
    <% end %>
  </div>
  <ul class="users">
    <% if @surveys.present? %>
      <%= render @surveys %>
    <% else %>
      <h3>該当するユーザが見つかりません</h3>
    <% end %>
  </ul>
  <%= paginate @surveys %>
</div>
